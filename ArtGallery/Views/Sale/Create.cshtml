@model ArtGallery.Models.Sale

@{
    ViewData["Title"] = "Create";
}
@section Styles {
    <style>
        label {
            color: white;
        }
    </style>
}
<h1>Create</h1>
<div class="pattern-bg"></div>
<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaleName" class="control-label"></label>
                <input asp-for="SaleName" class="form-control" />
                <span asp-validation-for="SaleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <p class="text-danger">Note: Creating a new sale will end the previous sale.</p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
