@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<div class="pattern-bg"></div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="/images/@ViewBag.ImagePath" class="card-img-top" alt="Art Image">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4">
                <form asp-action="AddToAuction">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Title" class="form-control" readonly hidden/>
                        <input asp-for="Description" class="form-control" readonly hidden/>
                        <input asp-for="Price" class="form-control" readonly hidden/>
                        <input asp-for="SellType" class="form-control" readonly hidden/>
                        <input asp-for="Author" class="form-control" readonly hidden/>
                        <input asp-for="ReleaseDate" class="form-control" readonly hidden/>
                        <p class="card-title">@Model.Title</p>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"><strong>Author: </strong>@Model.Author</p>
                        <p class="card-text"><strong>Sell Type: </strong>Auction</p>
                    <div class="form-group mb-5" id="aucgrp">
                        <label asp-for="AuctionId" class="control-label">Auction</label>
                        <select class="form-control" asp-for="AuctionId" asp-items="@ViewBag.Auctions">
                            <option value="">Select Auction</option>
                        </select>
                        <span class="text-danger">@ViewBag.ErrMsg</span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

