@model ArtGallery.Models.Bids

@{
    ViewData["Title"] = "Place Your Bid";
}

@section Styles {
    <style>
        
        label{
            color:white;
        }
        .card {
            margin-top: 20px;
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        /* .card-header {
            background-color: #343a40;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        } */

        .card-body {
            padding: 2rem;
        }

        .form-group label {
            font-weight: 600;
        }

        /* .form-control[readonly] {
            background-color: #e9ecef;
        } */

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 8px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .text-muted {
            color: #6c757d !important;
        }

        .form-control-file {
            margin-top: 0.5rem;
        }
    </style>
}

<h1 class="my-4 text-center">@ViewData["Title"]</h1>
<div class="pattern-bg"></div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header text-center">
                <h3 class="my-2">Bidding Information</h3>
            </div>
            <div class="card-body">
                <form asp-action="BidCreate" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input asp-for="ArtWorkId" class="form-control" value="@ViewBag.ArtWork.ArtId" hidden />
                    <input asp-for="BidderId" class="form-control" hidden />

                    <div class="form-group">
                        <label>Title</label>
                        <input value="@ViewBag.ArtWork.Title" class="form-control" readonly />
                    </div>

                    <div class="form-group text-center mt-2">
                        <label>Image</label>
                        <img src="~/images/@ViewBag.ArtWork.imagePath" class="img-fluid rounded" alt="Art Image" style="max-width: 200px;" />
                    </div>

                    <div class="form-group">
                        <label>Minimum Bid</label>
                        <input value="@ViewBag.ArtWork.Price" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Auction Name</label>
                        <input value="@ViewBag.Auction.AuctionName" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Auction Location</label>
                        <input value="@ViewBag.Auction.AuctionLocation" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Remaining Time: {dd:hh:mm:ss}</label>
                        <input value="@ViewBag.Auction.RemainingTime" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label>Max Bid</label>
                        <input value="@ViewBag.MaxBid" class="form-control" readonly />
                        <span class="text-danger">@ViewBag.GreaterMsg</span>
                    </div>

                    <div class="form-group">
                        <label>Bidder Name</label>
                        <input value="@ViewBag.UserFullName" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="BidAmount"></label>
                        <input asp-for="BidAmount" class="form-control" />
                        <span asp-validation-for="BidAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary mt-2">Place Bid</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
